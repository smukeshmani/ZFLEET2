<mvc:View controllerName="ZGBC_FLEET_RETURN.ZGBC_FLEET_RETURN.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" 
          xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified"
	      xmlns:l="sap.ui.layout">
	<Shell id="shell">
		<App id="idAppControl">
	    	<pages>
			<Page title="{i18n>title}" titleAlignment = "Center">
				<content>
					    <MessageStrip visible="{localModel2>/Visible}"
							text="{localModel2>/Text}"
							type="{localModel2>/Type}"
							showIcon="true"
							showCloseButton="true"
							class="sapUiMediumMarginBottom">
					    </MessageStrip>
						<VBox class="sapUiSmallMargin">
						<f:SimpleForm id="IdEmpDetail"
						              editable="true" 
						              layout="ResponsiveGridLayout"
						              title="Employee Details"
						              labelSpanXL="4"
									  labelSpanL="4"
									  labelSpanM="12"
									  labelSpanS="12"
								      adjustLabelSpan="false"
								      emptySpanXL="0"
									  emptySpanL="0"
									  emptySpanM="0"
									  emptySpanS="0"
							          columnsXL="2"
								      columnsL="2"
									  columnsM="1"
									  backgroundDesign = "Solid"
									  singleContainerFullSize="false">
							<f:content>
								    <core:Title text="" />
									<Label text="Employee Number" required="true"/>
									<Input id="idEmpid" value="" submit="onSubmit" placeholder="Enter Employee ID"></Input>
									<Label text="Employee Name"/>
									<Text id="idNameEn" text="{/NameEn}" ></Text>
									<Label text="Employee Name(Arabic)"/>
									<Text id="idNameAr" text="{/NameAr}" ></Text>
									<Label text="Position Code"/>
									<Text text="{/PositionId}" id="idPositionCode"></Text>
									<Label text="Position"/>
									<Text text="{/PositionTextEn}" id="idPositionEn"></Text>
									<Label text="Position(Arabic)"/>
									<Text text="{/PositionTextAr}" id="idPositionAr"></Text>
								    <Label text="Department"/>
									<Text text="{/DepartmentEn}" id="idDepartmentEn"></Text>
									<Label text="Department(Arabic)"/>
									<Text text="{/DepartmentAr}" id="idDepartmentAr"></Text>
								  
								    <core:Title text="" />
								    <Label text=""/>
								    <Text text="" id="Blank"></Text>
									<Label text="CompanyCode"/>
									<Text text="{/Cocd}" id="idCocd"></Text>
									<Label text="Company name"/>
									<Text text="{/CocdDesc}" id="idCompanyName"></Text>
									<Label text="Employee Grade/Group ID" />
									<Text id="idEmpSubGroup" text ="{/EmpSubgroup}"></Text>
								    <Label text="Employee Grade/Group Desc." />
									<Text id="idEmpSubGroupDesc" text="{/EmpSubgroupDesc}"></Text>
									<Label text="Iquama No"/>
									<Text id="idIquama" text="{/IdNoEn}" ></Text>
                                    <Label text="Driving license No"/>
									<Input id="idDl" value="{/Dl}" enabled="true" ></Input>
							</f:content>
					 	 </f:SimpleForm>
					</VBox>
					<!--Vehicle type -->
						<VBox class="sapUiSmallMargin">
						<f:SimpleForm id="IdVehicleSelection"
						              editable="true" 
						              layout="ResponsiveGridLayout"
						              title="Vehicle Details"
						              labelSpanXL="4"
									  labelSpanL="4"
									  labelSpanM="12"
									  labelSpanS="12"
								      adjustLabelSpan="false"
								      emptySpanXL="0"
									  emptySpanL="0"
									  emptySpanM="0"
									  emptySpanS="0"
							          columnsXL="2"
								      columnsL="2"
									  columnsM="1"
									  backgroundDesign = "Solid"
									  singleContainerFullSize="false"
									  visible="{localModel>/VehicleDetVisible}">
							 <f:content>
							 	<core:Title text="" />
				        	    <Label text="Vehicle ID" required="true"/>
				        	    <Text id="idVehicleId" text="{localModel>/Vehicleid}" ></Text>
				        	    <Label text="Vehicle Name"/>
				        	    <Text id="idVehicleName" text="{localModel>/VehicleName}" ></Text>
				        	    <Label text="Vehicle Number"/>
				        	    <Text id="idVehicleNumber" text="{localModel>/VehicleNumber}" ></Text>
				        	    <core:Title text="" />
				        	    <Label text="Plant" required="true"/>
				        	    <Text id="idPlant" text="{localModel>/Plant}" ></Text>
				        	    <Label text="Location"/>
				        	    <Text id="idLocation" text="{localModel>/Location}" ></Text>
							 </f:content>
							 </f:SimpleForm>
							</VBox>
				</content>
				
				<footer>
					 <OverflowToolbar id="otbFooter">
				     <ToolbarSpacer/>
				     <Button type="Emphasized" text="Submit Request" press="onSubmitRequest" width="200px" id = "Idsubmit" visible="{localModel>/SumitRequestVisible}" >
			   		 <layoutData><OverflowToolbarLayoutData priority="NeverOverflow" /></layoutData>
		    		 </Button>
			         </OverflowToolbar>
	           	</footer>
			</Page>
		</pages>
		</App>
	</Shell>
</mvc:View>